---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Asesoramiento Especializado",
    subTitle:"Te guiamos en cada paso del proceso para garantizar la selección adecuada de placas de yeso laminado según las necesidades de tu proyecto, asegurando cumplimiento normativo y calidad.",
   imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
    imgAlt: "Equipo asesorando sobre instalación de placas de yeso",
  },
  {
    isRightSection: false,
    title: "Instalación Precisa y Eficiente",
    subTitle:"Nuestros técnicos especializados realizan instalaciones rápidas, limpias y con acabados profesionales, adaptándose a todo tipo de espacios residenciales o comerciales.",
img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Soluciones de Aislamiento Acústico",
    subTitle:"Mejoramos la calidad acústica de tus espacios mediante soluciones especializadas con placas de yeso laminado para ambientes más confortables y silenciosos.",
    single: true,

    imgAlt: "Instalación de placas para aislamiento acústico",
  },
  {
    isRightSection: false,
    title: "Mantenimiento y Soporte",
    subTitle:"Ofrecemos servicios de mantenimiento preventivo y correctivo para asegurar que tus instalaciones con placas de yeso mantengan su rendimiento y estética a largo plazo.",

    imgAlt: "Técnico realizando mantenimiento en placas de yeso",
  },
  {
    isRightSection: true,
    title: "Proyectos Comerciales Personalizado",
    subTitle:
      "Creamos soluciones a medida para empresas, diseñadas específicamente para cubrir las necesidades particulares de cada negocio, desde oficinas hasta locales comerciales",
    single: true,

    imgAlt: "Proyecto comercial con instalación de placas de yeso",
    btnExists: true,
    btnTitle: "Conoce más",
    btnURL: "#",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
---

<MainLayout
 title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://tuempresa.com/servicios",
    "url":"https://tuempresa.com/servicios",
    "name": "Servicios de Instalación de Placas de Yeso Laminado",
    "description": "Ofrecemos asesoría especializada, instalaciones profesionales y soluciones acústicas en placas de yeso laminado para viviendas y locales comerciales.",
    "isPartOf": {
    "@type": "WebSite",
    "url": "https://tuempresa.com",
     "name": "TuEmpresa",
     "description": "Especialistas en instalaciones de placas de yeso laminado para proyectos residenciales y comerciales."
    },
    "inLanguage": "es-ES"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At ScrewFast, we take pride in providing comprehensive solutions and exceptional service in the hardware and construction industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
 
    <FeaturesStats
    title="Nuestro Compromiso en Cifras"
    subTitle="Trabajamos con precisión y compromiso para garantizar la satisfacción total en cada proyecto."
    mainStatTitle="98%"
    mainStatSubTitle="clientes satisfechos con nuestro servicio"
    stats={[
      
    { 
      stat: "1000+", 
        description: "instalaciones realizadas" 
        },
      { stat: "30%", 
      description: "reducción del tiempo de instalación" 
      },
      { 
        stat: "40%", 
        description: "mejora en aislamiento acústico" 
      },
    ]}
  />
</MainLayout>

