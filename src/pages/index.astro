---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Consulta nuestros servicios"
    url="/servicios"
  />

  <HeroSection
    title={`Soluciones Profesionales en <span class="text-green-500 dark:text-green-400">Placas de Yeso Laminado</span>`}
    subTitle="Instalación especializada de tabiques, techos y soluciones acústicas para proyectos residenciales y comerciales."
    primaryBtn="Ver Servicios"
    primaryBtnURL="/servicios"
    secondaryBtn="Solicita Presupuesto"
    secondaryBtnURL="/contacto"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.9</span> / 5`}
    starCount={5}
    reviews={`Basado en más de <span class="font-bold">950</span> opiniones`}
    src={heroImage}
    alt="Placas de yeso laminado listas para instalación"
  />

  <ClientsSection
    title="Nuestros Clientes Confían en Nosotros"
    subTitle="Calidad y eficiencia avalada por nuestros clientes en el sector construcción."
  />

  <FeaturesGeneral
    title="Comprometidos con la Excelencia Constructiva"
    subTitle="Enfocados en ofrecer instalaciones rápidas, limpias y profesionales de placas de yeso laminado. Garantizamos resultados duraderos y de alta calidad."
    src={featureImage}
    alt="Instaladores trabajando en placas de yeso laminado"
    features={features}
  />

  <FeaturesNavs
    title={`Adaptamos cada proyecto con <span class="text-green-500 dark:text-green-400">soluciones en placas de yeso laminado</span> personalizadas.`}
    tabs={[
      {
        heading: "Instalaciones Precisas",
        content:
          "Utilizamos técnicas avanzadas para asegurar que cada instalación de placas de yeso sea precisa, eficiente y adaptada perfectamente a tus necesidades.",
        svg: "tools",
        src: tools,
        alt: "Herramientas de precisión para instalar placas de yeso",
        first: true,
      },
      {
        heading: "Acabados de Calidad",
        content:
          "Garantizamos acabados impecables con atención al detalle, proporcionando un aspecto profesional y duradero para cada espacio.",
        svg: "dashboard",
        src: dashboard,
        alt: "Proyectos con acabados detallados en placas de yeso",
        second: true,
      },
      {
        heading: "Soluciones Acústicas",
        content:
          "Mejora el confort acústico de tus ambientes con nuestras placas de yeso especializadas en aislamiento acústico, ideales para oficinas y hogares.",
        svg: "house",
        src: construction,
        alt: "Instalación de aislamiento acústico con placas de yeso laminado",
      },
    ]}
  />

  <TestimonialsSection
    title="Impulsa tu Proyecto con Nosotros"
    subTitle="Instalaciones rápidas y eficientes con resultados superiores. Descubre por qué somos líderes en placas de yeso laminado."
    testimonials={[
      {
        content:
          "La instalación realizada por esta empresa fue rápida, precisa y extremadamente limpia. El resultado superó ampliamente nuestras expectativas. ¡Muy recomendables!",
        author: "Javier González",
        role: "Gerente de Proyectos | Edifica SL",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "500+",
        description:
          "proyectos exitosos realizados en viviendas y oficinas comerciales",
      },
      {
        count: "45%",
        description:
          "mejora en eficiencia energética gracias a nuestras soluciones aislantes",
      },
      {
        count: "20%",
        description:
          "reducción del tiempo habitual de instalación comparado con métodos tradicionales",
      },
      {
        count: "3x",
        description: "mejora en confort acústico con nuestras instalaciones especializadas",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Construye con los Mejores"
    subTitle="Solicita ahora un presupuesto sin compromiso y da el primer paso hacia la calidad y excelencia en tus instalaciones de placas de yeso laminado."
    url="/contacto"
  />
</MainLayout>