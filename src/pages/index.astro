---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`Equip Your Projects with <span
        class="text-yellow-500 dark:text-yellow-400">ScrewFast</span>`
    subTitle="Top-quality hardware tools and expert construction services for every project need."
    primaryBtn="Start Exploring"
    primaryBtnURL="/products"
    secondaryBtn="Contact Sales Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Confiado por los Líderes de la Industria"
    subTitle="Experimenta la fiabilidad elegida por los gigantes de la industria."
  />

  <FeaturesGeneral
    title="Cumpliendo con las Demandas de la Industria"
    subTitle="En ScrewFast, abordamos los desafíos únicos que se presentan en los sectores de herramientas y construcción. Desde herramientas de vanguardia hasta servicios expertos, estamos dedicados a ayudarte a superar obstáculos y alcanzar tus objetivos."
    src={featureImage}
    alt="Productos ScrewFast en cajas flotantes"
    features={features}
  />

  <FeaturesNavs
    title=`Personaliza las ofertas de <span class="text-yellow-500 dark:text-yellow-400">ScrewFast</span> para adaptarlas perfectamente a tus necesidades de herramientas y construcción.`
    tabs={[
      {
        heading: "Herramientas de Vanguardia",
        content:
          "Impulsa tus proyectos con las herramientas de vanguardia de ScrewFast. Experimenta una mayor eficiencia en la gestión de la construcción con nuestras sofisticadas soluciones automatizadas.",
        svg: "tools",
        src: tools,
        alt: "Equipo pesado amarillo y negro en un campo de hierba seca",
        first: true,
      },
      {
        heading: "Tableros Intuitivos",
        content:
          "Navega con facilidad usando los tableros intuitivos de ScrewFast. Configura y supervisa tus proyectos sin problemas, con interfaces fáciles de usar diseñadas para una gestión rápida y eficaz del flujo de trabajo.",
        svg: "dashboard",
        src: dashboard,
        alt: "Captura de pantalla o representación gráfica del tablero intuitivo",
        second: true,
      },
      {
        heading: "Características Robustas",
        content:
          "Minimiza la complejidad, maximiza la productividad. Las características robustas de ScrewFast están diseñadas para optimizar tu proceso de construcción, ofreciendo resultados que destacan por su excelencia.",
        svg: "house",
        src: construction,
        alt: "Estructura metálica gris de un edificio cerca de una grúa torre durante el día",
      },
    ]}
  />


  <TestimonialsSection
    title="Acelera tus Proyectos"
    subTitle="En ScrewFast, garantizamos un inicio rápido con la configuración instantánea de cuentas. Experimenta la velocidad redefinida en la construcción."
    testimonials={[
      {
        content:
          "ScrewFast aumentó dramáticamente la eficiencia de nuestro proyecto. La configuración fue instantánea, y sus tiempos de respuesta rápidos son fenomenales. ¡Realmente un cambio revolucionario en el soporte de herramientas y construcción!",
        author: "Samantha Ruiz",
        role: "Directora de Operaciones | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "clientes equipados: desde aficionados al bricolaje hasta grandes empresas de construcción",
      },
      {
        count: "35%",
        description:
          "aumento en la eficiencia de los proyectos con las herramientas y servicios de ScrewFast",
      },
      {
        count: "15,3%",
        description:
          "reducción en los costos de mantenimiento reportada por clientes a largo plazo",
      },
      {
        count: "2x",
        description: "ensamblaje más rápido gracias a soluciones innovadoras de fijación",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Construyamos Juntos"
    subTitle="ScrewFast es una plantilla de código abierto, meticulosamente diseñada con los frameworks Astro, Tailwind CSS y Preline UI."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
